RewriteEngine on 
# 把 bbs.dakm.cn改为你要绑定的域名. 
RewriteCond %{HTTP_HOST} ^(www.)?about.allluckly.cn$ 
# 把 bbs改为要绑定的目录. 
RewriteCond %{REQUEST_URI} !^/about/ 
# 不要改以下两行. 
RewriteCond %{REQUEST_FILENAME} !-f 
RewriteCond %{REQUEST_FILENAME} !-d 
# 把 bbs改为要绑定的目录. 
RewriteRule ^(.*)$ /about/$1 
# 把 bbs.dakm.cn改为你要绑定的域名 
# 把 bbs 改为要绑定的目录. 
# bbs/ 后面是首页文件index.php, index.html…… 
RewriteCond %{HTTP_HOST} ^(www.)?about.allluckly.cn$ 
RewriteRule ^(/)?$ about/index.php [L] 
